    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>Revenues Amount</th>
        <th>Equity Amount</th>
        <th>Convertible Note Amount</th>
        <th>Bank Debt Amount</th>
        <th>Other Amount</th>
        <th>Status</th>
      </tr>

      <% @cash_in_histories.each do |history| %>
        <tr>
          <td><%= history.id %></td>
          <td><%= history.revenues_amount %></td>
          <td><%= history.equity_amount %></td>
          <td><%= history.convertible_note_amount %></td>
          <td><%= history.bank_debt_amount %></td>
          <td><%= history.other_amount %></td>
          <td><%= history.status %></td>




        </tr>
      <% end %>
    </table>
  <% end %>


