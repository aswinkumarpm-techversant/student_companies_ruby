</div>


  <% if @cash_in_histories.empty? %>

    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>Revenues Amount</th>
        <th>Equity Amount</th>
        <th>Convertible Note Amount</th>
        <th>Bank Debt Amount</th>
