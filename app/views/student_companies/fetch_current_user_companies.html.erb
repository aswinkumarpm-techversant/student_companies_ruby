<h1 style="text-align: center">Listing My Companies</h1>

<p style="text-align: center"><%= link_to 'New Student Company', new_student_company_path, class: "btn btn-xs btn-success" %></p>

<table class="table table-bordered" style="width: 300px; margin: auto">
  <tr>
    <th>ID</th>
    <th>Company ID</th>
    <th></th>
  </tr>

  <% @student_companies.each do |company| %>
    <tr>
      <td><%= company.id %></td>
      <td><%= Company.find_by(id: company.company_id).name %></td>
      <td><%= link_to 'Show', student_company_path(company),  class: "btn btn-xs btn-success" %>
            <%#= link_to 'Edit', edit_student_company_path(company),  class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete', student_company_path(company), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>


    </tr>
  <% end %>
</table>